<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Productos</li>
                </ol>
            </div>
            <h4 class="page-title">Productos</h4>
        </div>
    </div>
</div> 

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <form class="form-inline">
                <div class="form-group">
                    <label for="inp-search-product" class="sr-only">Buscar</label>
                    <input type="search" class="form-control" id="inp-search-product" placeholder="Buscar...">
                </div>
                <div class="form-group m-sm-2">
                    <label for="sort-select" class="mr-2">Organizar por</label>
                    <select class="custom-select" id="sort-select">
                        <option selected="">seleccione</option>
                        <option value="1">Precios bajos</option>
                        <option value="2">Precios altos</option>
                    </select>
                </div>
            </form>
        </div> <!-- end card-box -->
    </div> <!-- end col-->
</div>

<div class="row justify-content-center">
    <div class="col-12">
        <div class="navbar-nav-scroll mb-2 swiper">
            <ul class="navbar-nav bd-navbar-nav flex-row swiper-wrapper"
            id="categoria-select">
                <li class="nav-item swiper-slide category-filter"
                data-category="">
                    <a class="btn btn-white btn-rounded waves-effect waves-light mx-1 bg-white d-flex justify-content-center align-items-center flex-wrap " href="javascript:void(0)"> Todas<span class="badge bg-primary text-white mx-1 " >{{productos.length}}</span></a> 
                </li>
                {{#categorias productos}}
                    <li class="nav-item swiper-slide category-filter"
                    data-category="{{this.categoria}}">
                        <a class="btn btn-white btn-rounded waves-effect waves-light mx-1 bg-white d-flex justify-content-center align-items-center flex-wrap " href="javascript:void(0)"> {{this.categoria}}<span class="badge bg-info text-white mx-1 " >{{this.cantidadCategorias}}</span></a> 
                    </li>
                {{/categorias}}
            </ul>
        </div>
    </div>

</div>

<div class="row">
    {{#each productos}}
    <div class="col-sm-6 col-xl-3 producto ver" data-filter-categoria="{{this.categoria}}"
        data-filter-name="{{this.nombre}}" data-sort-precio="{{this.precio}}">
        <div class="card-box product-box">

            <div class="product-action">
                <a href="/{{this.nombre_tienda}}/producto/{{this.id}}" class="btn btn-success btn-xs waves-effect waves-light"><i class="mdi mdi-pencil"></i> Ver producto</a>
            </div>

            <a href="/{{this.nombre_tienda}}/producto/{{this.id}}" 
            class="bg-light d-flex justify-content-center contenedor-img">
                <img src="{{this.showImg}}" alt="product-pic" class="img-fluid" />
            </a>

            <div class="product-info">
                <div class="row align-items-center">
                    <div class="col">
                        <h4 class="font-16 mt-0 sp-line-1">
                            <a href="/{{this.nombre_tienda}}/producto/{{this.id}}" 
                            class="text-dark" >{{this.nombre}}</a>
                        </h4>
                        <div class="text-warning mb-2 font-13 d-none d-md-block">
                            {{this.categoria}}
                        </div>
                        <h5 class="m-0 d-none d-md-block"> <span class="text-muted"> Stocks : {{this.showStock.detalles.cantidad}} pcs</span></h5>
                    </div>
                    <div class="col-auto">
                        <div class="product-price-tag d-none d-md-block">
                            {{getCurrency this.precio}}
                        </div>
                        <small class="product-price-tag d-md-none">
                            {{getCurrency this.precio}}
                        </small>
                    </div>
                </div> <!-- end row -->
            </div> <!-- end product info-->
        </div> <!-- end card-box-->
    </div> <!-- end col-->
    {{/each}}
</div>