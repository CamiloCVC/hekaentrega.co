<div class="row">
    <div class="logo-portada col-12" 
    id="logo-portada-tienda">
        <figure id="portada-tienda" class="mb-0"
        style="width: 100%; height: 35vh;
        background-image: url('/img/undraw_posting_photo.svg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;">
        </figure>

        <figure id="contenedor-logo-tienda"
        class="mt-n4 my-0 ml-md-4 d-flex align-items-center align-items-center">
            <img src="/img/unnamed.png" id="img-logo-tienda" alt="Logo tienda" class="img-fluid rounded-circle"
            style="height:120px; width: 120px;">
            <div class="mt-3 ml-3">
                <h2 class="text-dark font-weight-normal text-wrap d-none d-sm-block"
                data-store_info="nombre_tienda">Nombre tienda</h2>
                <h5 class="text-dark font-weight-normal text-wrap d-sm-none"
                data-store_info="nombre_tienda">Nombre tienda</h5>
                <a href="javascript:void(0)" class="btn btn-white btn-rounded"><i class="fab fa-whatsapp" style="color: #25D366"></i><span class="ml-2 d-none d-sm-inline" data-link="true" data-store_info="celular"></span></a>
            </div>
            <a href="javascript:void(0)" id="ver-info-tienda" 
            data-toggle="#informacion-tienda" 
            class="ml-2 mt-3 font-weight-normal text-dark font-20"><i class="fa fa-chevron-down"></i></a>
        </figure>
    </div>
</div>

<div class="row" id="informacion-tienda" style="display: none;">
    <div class="offset-1 col mb-3">
        <h5><i class="fa fa-user"></i><spam class="ml-2" data-store_info="nombre"></spam></h5>
        <h5><i class="fa fa-mobile-alt"></i><spam class="ml-2" data-store_info="celular"></spam></h5>
        <h5><i class="fa fa-envelope"></i><spam class="ml-2" data-store_info="correo"></spam></h5>
    </div>

    <div class="col-12 col-lg-6">
        <p data-store_info="descripcion"></p>
    </div>
</div>

