<div class="row justify-content-center mt-3">
    <div class="col-12">
        <div class="navbar-nav-scroll mb-2 swiper">
            <ul class="navbar-nav bd-navbar-nav flex-row swiper-wrapper"
            id="categoria-select">
                <li class="nav-item swiper-slide category-filter"
                data-category="">
                    <a class="btn btn-white btn-rounded waves-effect waves-light d-flex justify-content-center align-items-center flex-wrap " href="javascript:void(0)"> Todas<span class="badge bg-primary text-white mx-1 " >{{productos.length}}</span></a> 
                </li>
                {{#categorias productos}}
                    <li class="nav-item swiper-slide category-filter"
                    data-category="{{this.categoria}}">
                        <a class="btn btn-white btn-rounded waves-effect waves-light d-flex justify-content-center align-items-center flex-wrap " href="javascript:void(0)"> {{this.categoria}}<span class="badge bg-info text-white mx-1 " >{{this.cantidadCategorias}}</span></a> 
                    </li>
                {{/categorias}}
            </ul>
        </div>
    </div>

</div>

<div class="row">
    {{#each productos}}
    <div class="col-6 col-sm-4 producto ver mt-3" data-filter-categoria="{{this.categoria}}"
        data-filter-name="{{this.nombre}}" data-sort-precio="{{this.precio}}">
        <div class="card-box p-1 pb-2 product-box shadow border" style="border-radius: 20px;">

            <div class="product-action">
                <a href="/{{this.nombre_tienda}}/producto/{{this.id}}" class="btn btn-success btn-xs waves-effect waves-light"><i class="mdi mdi-eye"></i> Ver producto</a>
            </div>

            <a href="/{{this.nombre_tienda}}/producto/{{this.id}}" 
            class="bg-light contenedor-img">
                <img src="{{this.showImg}}" alt="product-pic" class="img-fluid" width="100%" height="100%"
                style="border-radius: 20px"/>
            </a>

            <div class="product-info pt-1 pt-sm-3">
                <div class="row align-items-center">
                    <div class="col-12 col-sm">
                        <h4 class="mt-0 sp-line-1">
                            <a href="/{{this.nombre_tienda}}/producto/{{this.id}}" 
                            class="text-dark" >{{this.nombre}}</a>
                        </h4>
                        <div class="text-warning mb-2 font-13 d-none d-md-block text-truncate">
                            {{this.categoria}}{{#unless this.categoria}}Sin categor√≠a{{/unless}}
                        </div>
                        <h6 class="m-0 d-none d-md-block"> <span class="text-muted text-nowrap"> Stocks : {{this.showStock.detalles.cantidad}} pcs</span></h6>
                    </div>
                    <div class="col-12 col-sm-auto">
                        <div class="product-price-tag d-none d-md-block">
                            {{getCurrency this.precio}}
                        </div>
                        <small class="badge float-right p-1 badge-outline-secondary d-md-none">
                            {{getCurrency this.precio}}
                        </small>
                    </div>
                    <div class="col-12 d-md-none">
                        <a href="/{{this.nombre_tienda}}/producto/{{this.id}}" 
                        class="btn btn-primary btn-rounded waves-effect waves-light text-truncate btn-sm mt-2 btn-block"><i class="mdi mdi-eye"></i> Ver producto</a>
                    </div>
                </div> <!-- end row -->
            </div> <!-- end product info-->
        </div> <!-- end card-box-->
    </div> <!-- end col-->
    {{/each}}
</div>